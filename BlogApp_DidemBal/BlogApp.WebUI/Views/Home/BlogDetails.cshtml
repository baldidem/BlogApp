@model Blog


<div class="row">
    <div class="col-9">

        <div style="height:100rem;">
            <img class="pb-2" style=" width: 100%; height: 25rem;" src="~/images/@Model.ImageUrl" />
            <div class="d-flex flex-row justify-content-between">
            <div>
            <h3 class="text-center" style="color:#361500">@Model.Title.ToUpper()</h3>
            </div>
            @if (User.Identity.IsAuthenticated)
            { 
                @if (User.IsInRole("ADMIN"))
                    {
                        <div style="width:100px;" class="d-flex flex-row justify-content-around">
                            <a class="btn" style="color:red;" data-bs-toggle="modal" data-bs-target="#DeleteModal_@Model.Id"><i class="fa-regular fa-trash-can"></i></a>

                            <!-- DeleteModal -->
                            <div class="modal fade" id="DeleteModal_@Model.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Warning!</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p class="text-danger">This blog will be deleted!</p>
                                            <p>Are you sure?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <a class="btn btn-danger" asp-controller="Admin" asp-action="BlogDelete" asp-route-id="@Model.Id">Yes</a>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <a class="btn" style="color:cadetblue;" asp-controller="Admin" asp-action="BlogEdit" asp-route-id="@Model.Id"><i class="fa-regular fa-pen-to-square"></i></a>
                        </div>
                    }
                   
                }

            </div>
            <p style="font-family: 'Lora', serif; color:#E38B29">Author: @Model.Author</p>
            <p>@Model.Description </p>            

        </div>

    </div>

    <div class="col-3">
        <h5 class="mb-0 mt-2 fs-5 text-center text-muted">About Me</h5>
        <hr />
        <img style=" width: 100%; height: auto;" src="~/images/aboutme.jpg" />
        <hr />
        <p>"Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna             aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.             Duis aute "</p>
        <hr />
        <h5 class="text-muted text-center">Categories</h5>
        <hr />
        @foreach (var category in (List<Category>)ViewBag.Categories)
        {
            <div class="d-flex justify-content-around">

                <a style="color:#E38B29; text-decoration: none" asp-controller="Home" asp-action="BlogsForCategory" asp-route-id=@category.Id>@category.CategoryName</a>

            </div>
        }
        <hr />
        <h5 class="text-muted text-center">Follow Us</h5>
        <hr />
        <div class="d-flex justify-content-md-around">
            <i class="fa-brands fa-instagram"></i>
            <i class="fa-brands fa-facebook"></i>
            <i class="fa-brands fa-twitter"></i>
        </div>
    </div>
</div>
   






