@model UserModel

<form asp-controller="Admin" asp-action="UserCreate" method="post">
    <div style="height:30rem" class="d-flex justify-content-center align-items-center">
        <div class="card" style="width:24rem;">
            <div class="card-body">
                <h5 class="card-title text-center mb-3" style="color:cadetblue">User Create</h5>

                <div class="row m-3">
                    <div class="col-md-4">
                        <label style="font-family: 'Josefin Sans', sans-serif; color:#E38B29" asp-for="Name">Name</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" asp-for="Name" class="input-group-text" />
                    </div>
                </div>

                <div class="row m-3">
                    <div class="col-md-4">
                        <label style="font-family: 'Josefin Sans', sans-serif; color:#E38B29" asp-for="Surname">Surname</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" asp-for="Surname" class="input-group-text" />
                    </div>
                </div>

                <div class="row m-3">
                    <div class="col-md-4">
                        <label style="font-family: 'Josefin Sans', sans-serif; color:#E38B29" asp-for="UserName">User Name</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" asp-for="UserName" class="input-group-text" />
                    </div>
                </div>

                <div class="row m-3">
                    <div class="col-md-4">
                        <label style="font-family: 'Josefin Sans', sans-serif; color:#E38B29" asp-for="Email">Email</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" asp-for="Email" class="input-group-text" />
                    </div>
                </div>

                <div class="row m-3">
                    <div class="col-md-4">
                        <label style="font-family: 'Josefin Sans', sans-serif; color:#E38B29" asp-for="SelectedRoles">Roles</label>
                    </div>
                    <div class="col-md-8">


                        @foreach (var role in ViewBag.Roles)
                        {
                            <div class="form-check">
                                <input type="checkbox"
                                   class="form-check-input"
                                   value=@role
                                   name="selectedRoles"
                                   id=@role
                                   @{
                                   try
                                   {
                                           @(((string[])ViewBag.SelectedRoles).Any(i=>i==role) ? "checked" : "")
                                   }
                                   catch (Exception)
                                   {
                                   }
                                   }>
                                <div class="row m-3">
                                    <label style="font-family: 'Josefin Sans', sans-serif; color:saddlebrown; font-size:14px">@role</label>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="row m-3 d-flex justify-content-center">
                    <div class="col-md-4">
                        <button style="
font-family: 'Josefin Sans', sans-serif; background-color:cadetblue" class="btn btn-sm text-light" type="submit">ADD</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
