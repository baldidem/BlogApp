@model Category

<form asp-controller="Admin" asp-action="CategoryEdit" method="post">
    <div style="height:30rem" class="d-flex justify-content-center align-items-center">
        <div class="card" style="width:24rem;">
            <div class="card-body">
                <h5 class="card-title text-center mb-3" style="color:cadetblue">Category Create</h5>

                <div class="row m-3">
                    <div class="col-md-4">
                        <label style="font-family: 'Josefin Sans', sans-serif; color:#E38B29" asp-for="CategoryName">Category Name</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" asp-for="CategoryName" class="input-group-text" />
                    </div>
                </div>         


                <div class="row m-3 d-flex justify-content-center">
                    <div class="col-md-4">
                        <button style="
font-family: 'Josefin Sans', sans-serif; background-color:cadetblue" class="btn btn-sm text-light" type="submit">EDIT</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
