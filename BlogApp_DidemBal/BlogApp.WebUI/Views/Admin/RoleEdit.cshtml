@model RoleDetails
<h1 style="color:saddlebrown" class="display-6">EDIT @Model.Role.Name.ToUpper() ROLE</h1>
<hr />
<form asp-controller="Admin" asp-action="RoleEdit" method="post">
    <input type="hidden" name="RoleId" value=@Model.Role.Id />
    <input type="hidden" name="RoleName" value=@Model.Role.Name />
    <div class="row">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-md-6">
            <h6 style="font-family: 'Varela Round', sans-serif;" class="text-success p-2">ADD TO @Model.Role.Name.ToUpper() ROLE</h6>
            <table class="table table-bordered table-hover table-striped table-sm">
                @if (Model.NonMembers.Count() > 0)
                {
                    <thead style=" font-family: 'Varela Round' , sans-serif;">
                        <tr style="background-color:#E38B29">
                            <td>User Name</td>
                            <td>Select</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.NonMembers)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>
                                    <input type="checkbox" value=@user.Id name="IdsToAdd">
                                </td>
                            </tr>
                        }
                    </tbody>
                }
                else
                {
                    <tr>
                        <td colspan="2">All members are in this role!</td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-md-6">
            <h6 style="font-family: 'Varela Round', sans-serif;" class="text-success p-2">REMOVE FROM @Model.Role.Name.ToUpper() ROLE</h6>
            <table class="table table-bordered table-hover table-striped table-sm">
                @if (Model.Members.Count() > 0)
                {
                    <thead style=" font-family: 'Varela Round' , sans-serif;">
                        <tr style="background-color:cadetblue">
                            <td>User Name</td>
                            <td>Select</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Members)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>
                                    <input type="checkbox" value=@user.Id name="IdsToRemove">
                                </td>
                            </tr>
                        }
                    </tbody>
                }
                else
                {
                    <tr>
                        <td colspan="2">No user!</td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2 offset-4">
            <button type="submit" class="btn d-inline" style="background-color:#E38B29; color:saddlebrown">Save Changes</button>
        </div>
        <div class="col-md-2">
            <a asp-controller="Admin" asp-action="RoleList" class="btn d-inline text-light" style="background-color:cadetblue">Close</a>
        </div>
    </div>
</form>