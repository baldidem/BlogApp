@model List<IdentityRole>

<div class="row">
    <div class="col-md-10">
        <h5 style="font-family: 'Varela Round', sans-serif; color:saddlebrown" class="text-center">ROLES</h5>
        <a style="font-family: 'Varela Round', sans-serif; color:cadetblue" asp-controller="Admin" asp-action="RoleCreate" class="text-decoration-none">ADD</a>
        <a style="color:cadetblue" asp-controller="Admin" asp-action="RoleCreate"><i class="fa-solid fa-plus"></i></a>
        <table class="table table-sm table-responsive-md">
            <thead>
                <tr>
                    <td style="font-family: 'Varela Round', sans-serif; color:#E38B29">Name</td>
                    <td class="text-center" style="font-family: 'Varela Round', sans-serif; color:#E38B29">Actions</td>
    </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            @foreach (var role in Model)
            {
                <tr>
                            <td style="font-family: 'Varela Round', sans-serif" class="text-muted">@role.Name.ToUpper()</td>
                    <td>
                        <div class="d-flex justify-content-evenly">
                            <a style="color:red" asp-controller="Admin" asp-action="RoleDelete" asp-route-id="@role.Id"><i class="fa-regular fa-trash-can"></i></a>
                            <a style="color:burlywood" asp-controller="Admin" asp-action="RoleEdit" asp-route-id="@role.Id"><i class="fa-regular fa-pen-to-square"></i></a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>

    </table>


</div>

    </div>
